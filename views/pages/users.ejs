<!DOCTYPE html>
<html>
    <head>
        <%- include("../fragments/head") %>
        <title>Tennis Garage | Users</title>
    </head>
    <body>
        <%- include("../fragments/header") %>
        <main class="main">
            <section id="tablearea" style="width: 80%; position: relative; left: 10%;">
                <!-- <h2 style="width: 100%; padding: 1rem; background: var(--pale-yellow); text-align: center;">
                    List of registered users
                </h2> -->
                <div id="pretable">
                    <table>
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Role</th>
                                <th>Promote/Demote</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let oneUser of locals.users) { %>
                                <% if (oneUser.username != user.username) { %>
                                    <tr>
                                        <td><%- oneUser.username %></td>
                                        <td><%- oneUser.first_name %></td>
                                        <td><%- oneUser.last_name %></td>
                                        <td><%- oneUser.role %></td>
                                        <td>
                                            <form id="hidden-form", method="post", action="prom" style="margin: 0;">
                                                <input type="text" name="user_id" value="<%- oneUser.user_id %>" style="display: none;">
                                                <input type="text" name="user_role" value="<%- oneUser.role %>" style="display: none;">
                                                <input type="submit" value="Proceed">
                                            </form>
                                        </td>
                                    </tr>
                                <% } %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </section>
        </main>
        <%- include("../fragments/footer") %>
    </body>
</html>